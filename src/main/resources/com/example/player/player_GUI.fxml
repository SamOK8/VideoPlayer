<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<VBox fx:id="scene" alignment="CENTER" prefHeight="550.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.player.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <MediaView fx:id="player" fitHeight="400.0" fitWidth="711.0" />
   <VBox fx:id="AllControls" prefHeight="200.0" prefWidth="720.0">
      <children>
            <Slider fx:id="progressSlider" />
         <HBox fx:id="Controls" alignment="CENTER" prefHeight="50.0" prefWidth="740.0" spacing="10.0">
            <children>
               <Button fx:id="fullScreenButton" mnemonicParsing="false" onAction="#fullScreen" text="⛶" />
               <Button fx:id="openButton" mnemonicParsing="false" onAction="#open" text="open" textAlignment="CENTER">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
               </Button>
                    <Button fx:id="playPauseButton" alignment="CENTER" mnemonicParsing="false" onAction="#playPaue" text="▶" textAlignment="CENTER">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                    </Button>
               <Slider fx:id="volumeSlider" orientation="VERTICAL" />
            </children>
         </HBox>
      </children>
   </VBox>
</VBox>
